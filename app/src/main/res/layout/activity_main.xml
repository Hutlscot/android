<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="600dp" app:layout_constraintTop_toTopOf="parent">
        <Button
                android:text="Стол №1"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:id="@+id/button1"/>
        <Button
                android:text="Стол №2"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:id="@+id/button2"/>
        <Button
                android:text="Стол №3"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:id="@+id/button3"/>
        <Button
                android:text="Стол №4"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:id="@+id/button4"/>
        <Button
                android:text="Стол №5"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:id="@+id/button5"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="Карта столов"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>